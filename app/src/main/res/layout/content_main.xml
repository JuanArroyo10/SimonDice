<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:weightSum="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.com220.sli.simonsays.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bottomright_button"
        android:layout_alignLeft="@+id/bottomleft_button"
        android:layout_alignRight="@+id/bottomright_button"
        android:layout_alignStart="@+id/bottomleft_button"
        android:layout_below="@+id/bottomleft_button"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:text="INICIAR JUEGO" />

    <Button
        android:id="@+id/topleft_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space4"
        android:layout_toLeftOf="@+id/space2"
        android:layout_toStartOf="@+id/space2"
        android:background="@drawable/button_red"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/topright_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space4"
        android:layout_alignTop="@+id/topleft_button"
        android:layout_toEndOf="@+id/space2"
        android:layout_toRightOf="@+id/space2"
        android:background="@drawable/button_green"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bottomleft_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/space3"
        android:layout_alignLeft="@+id/topleft_button"
        android:layout_alignStart="@+id/topleft_button"
        android:layout_toLeftOf="@+id/space2"
        android:background="@drawable/button_blue"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/bottomright_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/space3"
        android:layout_alignEnd="@+id/topright_button"
        android:layout_alignLeft="@+id/topright_button"
        android:layout_alignRight="@+id/topright_button"
        android:layout_alignStart="@+id/topright_button"
        android:background="@drawable/button_purple"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:text="PUNTAJE: "
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:id="@+id/score"
        android:layout_x="221dp"
        android:layout_y="464dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:id="@+id/mainClose"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/space2"
        android:layout_alignEnd="@+id/start"
        android:layout_alignLeft="@+id/start"
        android:layout_alignRight="@+id/start"
        android:layout_alignStart="@+id/start"
        android:text="CERRAR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:id="@+id/newHighScore"
        android:hint="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/space3"
        android:layout_above="@+id/mainClose"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="176dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/bottomleft_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/space4" />

</RelativeLayout>
